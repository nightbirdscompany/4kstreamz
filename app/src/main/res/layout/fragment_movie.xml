<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieFragment"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fillViewport="true"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
<!--        <Button-->
<!--            android:id="@+id/allBut"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="ALL"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:background="@drawable/awesome_button"-->
<!--            android:elevation="2dp"-->
<!--            android:layout_marginLeft="3dp"-->
<!--            />-->

        <Button
            android:id="@+id/hollywoodBut"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="HOLLYWOOD"
            android:textColor="#FFFFFF"
            android:background="@drawable/awesome_button"
            android:elevation="2dp"
            android:layout_marginLeft="3dp"/>

        <Button
            android:id="@+id/bollywoodBut"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="BOLLYWOOD"
            android:textColor="#FFFFFF"
            android:background="@drawable/awesome_button"
            android:elevation="2dp"
            android:layout_marginLeft="3dp"/>
                <Button
                    android:id="@+id/hindidubbingBut"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="HINDI DUBBING"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/awesome_button"
                    android:elevation="2dp"
                    android:layout_marginLeft="3dp"/>

                <Button
                    android:id="@+id/indianBanglaBut"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="INDIAN BANGLA"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/awesome_button"
                    android:elevation="2dp"
                    android:layout_marginLeft="3dp"/>


                <Button
                    android:id="@+id/koreanBut"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="KOREAN"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/awesome_button"
                    android:elevation="2dp"
                    android:layout_marginLeft="3dp"/>

                <Button
                    android:id="@+id/animationBut"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="ANIMATION"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/awesome_button"
                    android:elevation="2dp"
                    android:layout_marginLeft="3dp"/>



    </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:gravity="center"
        >

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/allMovieRecycler"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:visibility="visible"-->
<!--        />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hollywood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bollywood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hindiDubbing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/indianBangla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/korean"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />





        <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something Wrong Please Try Again"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/movieProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    </RelativeLayout>



</LinearLayout>