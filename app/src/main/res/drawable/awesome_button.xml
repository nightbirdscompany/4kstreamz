<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <gradient
                android:startColor="@color/light_blue_900"
                android:endColor="@color/light_blue_600"
                android:angle="45" />
        </shape>
    </item>

    <!-- Ripple Effect for Lollipop and above -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" android:top="4dp">
        <ripple android:color="@color/light_blue_900"/>
    </item>

</layer-list>
