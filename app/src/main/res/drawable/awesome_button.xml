<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#FF6F00"
                android:endColor="#FFA000"
                android:angle="45" />
        </shape>
    </item>

    <!-- Ripple Effect for Lollipop and above -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" android:top="4dp">
        <ripple android:color="#FF5722"/>
    </item>

</layer-list>
